---
import Image from "astro/components/Image.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { getImage } from "astro:assets";
const { image, title, pubDate, updatedDate, description } = Astro.props;

const thing = await getImage({ src: image });
---

<div class="header">
    {
        image && (
            <div
                class="hero-image"
                style={`background-image: url(${thing.src})`}
            />
        )
    }
    <div class="header-content">
        <div class="title">
            <h1>{title}</h1>
            <div class="date">
                <FormattedDate date={pubDate} />
                {
                    updatedDate && (
                        <div class="last-updated-on">
                            Last updated on <FormattedDate date={updatedDate} />
                        </div>
                    )
                }
            </div>
        </div>
        <div class="text-content">
            <span>{description}</span>
        </div>
    </div>
</div>

<style>
    .header {
        display: flex;
        flex-direction: row;
        flex-grow: 1;
        margin-bottom: 0.5em;
    }

    .header.alternate {
        flex-direction: row-reverse;
    }

    .header.selectable:hover h1::before {
        content: "> ";

    }

    .header-content {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
        border: 2px solid var(--text-color);
    }

    .header-content .text-content {
        display: flex;
        flex-grow: 1;
        padding: 0.5em;
        text-decoration: none;
    }

    .hero-image {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 256px;
        height: 170px;
        overflow: hidden;
        border: 2px solid var(--text-color);
        border-right-width: 0;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .alternate .hero-image{
        border-right-width: 2px;
        border-left-width: 0;
    }

    .title {
        display: flex;
        flex-direction: row;
        background: var(--text-color);
        color: black;
        text-shadow: none;
        padding: 0.5em;
    }

    .title h1 {
        flex-grow: 1;
        font-size: 2em;
        padding: 0;
        margin: 0;
    }
</style>
