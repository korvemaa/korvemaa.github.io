---
import HeaderLink from "./HeaderLink.astro";

let pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, "");
if (pathname == "") pathname = "index";
---

<nav>
	<span class="not-important">Navigation</span>
	<HeaderLink href="/">Home</HeaderLink>
	<HeaderLink href="/blog">Blog</HeaderLink>
	<span class="not-important">Projects</span>
	<HeaderLink href="/personal">Personal</HeaderLink>
	<HeaderLink href="/motorsport">Motorsport</HeaderLink>
	<HeaderLink href="/enviz">Enviz</HeaderLink>
	<HeaderLink href="/intruder">Intruder</HeaderLink>
	<HeaderLink href="/eagle-one">Eagle One</HeaderLink>
	<HeaderLink href="/ravenfield">Ravenfield</HeaderLink>
	<div style="flex-grow: 1;"></div>

	<!-- Discord Status -->
	<div class="online-status">
		<div class="song-disk">
			<img id="song-art" alt="Album art" />
		</div>
		<span id="song-name"></span>
		<span id="song-artist"></span>
	</div>

	<span id="current-time" class="not-important">9:50PM</span>
</nav>

<script defer>
	function updateClock() {
		document.getElementById("current-time").textContent =
			new Date().toLocaleTimeString();

		setTimeout(updateClock, 500);
	}

	updateClock();

	function getStatus() {
		return fetch(
			"https://api.lanyard.rest/v1/users/761439375594094612",
		).then((r) => r.json());
	}

	getStatus().then((status) => {
		if (!status.success) return; // Ignore

		const data = status.data;

		if (data.spotify != null) {
			document
				.querySelector(".online-status")
				.classList.add("has-status");

			const s = data.spotify;
			document.getElementById("song-art").src = s.album_art_url;

			document.getElementById("song-name").textContent = s.song;
			document.getElementById("song-artist").textContent = s.artist;
		}
	});
</script>

<style>
	.not-important {
		opacity: 0.4;
		padding: 0.5rem 1rem;
	}

	.online-status {
		display: none;
		padding: 0.5rem 1rem;
		flex-direction: column;
		border: var(--border-width) dotted var(--dimmed-glow-color);
	}

	.online-status.has-status {
		display: flex;
	}

	.online-status .song-disk {
		position: relative;
		aspect-ratio: 1/1;
		border-radius: 50%;
		overflow: hidden;
		margin-bottom: 0.5rem;

		animation: spin 6s linear infinite;
	}

	/* light reflection */
	.song-disk::before {
		content: "";
		position: absolute;
		inset: 0;
		border-radius: 50%;
		background: linear-gradient(
			135deg,
			rgba(255, 255, 255, 0.15),
			rgba(255, 255, 255, 0)
		);
		z-index: 1;
		pointer-events: none;
	}

	@keyframes spin {
		from {
			transform: rotate(0deg);
		}
		to {
			transform: rotate(360deg);
		}
	}

	.online-status #song-art {
		appearance: none;
		border: 0;

		-webkit-mask: radial-gradient(
			circle,
			transparent 0 10%,
			white 12% 100%
		);
		mask: radial-gradient(circle, transparent 0 7%, white 7% 100%);
	}

	.online-status span {
		display: flex;
		min-width: 0;
		white-space: normal;
		flex-shrink: 1;
	}

	#hue-icon {
		cursor: pointer;
	}

	#hue-slider {
		margin: 0;
		margin-left: 8px;
		appearance: none;
		width: 100%;
		height: 4px;
		background-color: var(--dimmed-glow-color);
	}

	#hue-slider::-webkit-slider-thumb {
		cursor: pointer;
		transition: none;
		background-color: var(--text-color);
		appearance: none;
		width: 8px;
		height: 14px;
	}

	#hue-slider::-moz-range-thumb {
	}

	nav {
		display: flex;
		flex-direction: column;

		min-width: 200px;
		max-width: 200px;
		flex-shrink: 0;

		flex-grow: 1;
	}

	nav a {
		padding: 0.5rem 1.2rem;
		font-size: 1em;
		color: var(--black);
		text-decoration: none;
	}

	nav a:hover {
		background-color: var(--dimmed-glow-color);
	}

	nav a.active {
		background-color: var(--text-color);
		text-shadow: none;
		color: black;

		text-decoration: none;
	}

	@media (max-width: 550px) {
		nav {
			justify-content: space-between;
		}

		header .not-important:not(#site-title) {
			display: none;
		}
	}
</style>
