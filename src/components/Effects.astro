<div class="background-vignette fullscreen"></div>
<div class="background-noise fullscreen"></div>
<div class="foreground-scan fullscreen"></div>
<div class="foreground-lines fullscreen"></div>

<style>
    .fullscreen {
        position: fixed;
        pointer-events: none;
        inset: 0;

        width: 100vw;
        height: 100vh;

        top: 0;
        left: 0;
    }

    .background-vignette {
        z-index: -50;

        background-image: radial-gradient(transparent, black 120%);
        box-shadow: inset 0 0 100000000px black;
        mix-blend-mode: multiply;
    }

    .background-noise {
        z-index: -100;
        background-image: url("noise.png");
        opacity: 0.3;
        image-rendering: pixelated;
        mix-blend-mode: multiply;
    }

    .foreground-scan {
        z-index: 100;

        top: -100%;
        pointer-events: none;
        background: linear-gradient(
            rgba(255, 255, 255, 0) 0%,
            rgba(255, 255, 255, 0.02) 100%
        );
        mix-blend-mode: screen;
        animation: scan 5s linear infinite;
        animation-delay: 2.5s;
    }

    @keyframes scan {
        0% {
            top: -100%;
        }
        100% {
            top: 100%;
        }
    }

    .foreground-lines {
        z-index: 90;
        background-image: repeating-linear-gradient(
            0deg,
            rgba(255, 255, 255, 0.08),
            rgba(255, 255, 255, 0.1) 4px,
            transparent 4px,
            transparent 8px
        );

        filter: brightness(0.1);
        mix-blend-mode: multiply;
        background-size: 100% 8px;

        /* makes the stripe height match the pattern repeat */
        animation: move-stripes 1s linear infinite;
    }

    @keyframes move-stripes {
        from {
            background-position: 0 0;
        }

        to {
            background-position: 0 8px;
            /* moves the pattern down by one repeat */
        }
    }
</style>
