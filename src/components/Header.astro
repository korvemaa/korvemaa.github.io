---
import HeaderLink from "./HeaderLink.astro";
import { getCollection } from "astro:content";
import {  SITE_TITLE } from "../consts";

let pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, "");
if (pathname == "") pathname = "index";

const latestPost = (await getCollection("blog")).sort(
	(a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
)[0];
---

<header>
	<nav>
		<span id="site-title" class="not-important">{SITE_TITLE}</span>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/projects">Projects</HeaderLink>
			<HeaderLink href={`/blog/${latestPost.id}`}>Blogs</HeaderLink>
		</div>
		<div style="flex-grow: 1;" class="not-important"></div>
		<span id="current-time" class="not-important">9:50PM</span>
	</nav>
</header>

<script defer>
	function updateClock() {
		document.getElementById("current-time").textContent =
			new Date().toLocaleTimeString();

		setTimeout(updateClock, 500);
	}

	updateClock();
</script>

<style>
	header {
		margin: 0;
		align-self: stretch;
	}

	header .not-important {
		opacity: 0.4;
		padding: 0.5rem 1rem;
	}

	#hue-icon {
		cursor: pointer;
	}

	#hue-slider {
		margin: 0;
		margin-left: 8px;
		appearance: none;
		width: 100%;
		height: 4px;
		background-color: var(--dimmed-glow-color);
	}

	#hue-slider::-webkit-slider-thumb {
		cursor: pointer;
		transition: none;
		background-color: var(--text-color);
		appearance: none;
		width: 8px;
		height: 14px;
	}

	#hue-slider::-moz-range-thumb {
	}

	nav {
		display: flex;
		align-items: flex-end;
		justify-content: flex-start;
	}

	.internal-links {
		display: flex;
	}

	nav a {
		padding: 0.5rem 1.2rem;
		font-size: 1em;
		color: var(--black);
		text-decoration: none;
		/* text-transform: uppercase; */
	}

	nav a:hover {
		background-color: var(--dimmed-glow-color);
	}

	nav a.active {
		background-color: var(--text-color);
		text-shadow: none;
		color: black;

		text-decoration: none;
	}

	@media (max-width: 550px) {
		nav {
			justify-content: space-between
		}

		header .not-important:not(#site-title) {
			display: none;
		}

	}
</style>
