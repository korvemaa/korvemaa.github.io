---
import ScrollView from "../../components/ScrollView.astro";
import DynamicLink from "../../components/DynamicLink.astro";

import { timeAgo } from "../../utility";

import { getImage } from "astro:assets";
import { type CollectionEntry, getCollection, render } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
    const posts = await getCollection("project");
    return posts.map((project) => ({
        params: { slug: project.id },
        props: project,
    }));
}

type Props = CollectionEntry<"project">;

const post = Astro.props;
const { Content } = await render(post);

const thumbnail =
    post.data.thumbnail != null
        ? await getImage({ src: post.data.thumbnail })
        : null;

const gallery = post.data.gallery
    ? await Promise.all(
          post.data.gallery.map(async (src) => {
              return await getImage({ src });
          }),
      )
    : null;

const videos = post.data.videos;

const hasArticle = (post.body || "").length > 0;
---

<Layout
    title={post.data.title}
    description={post.data.description}
    image={post.data.thumbnail}
>
    <div class="project-layout">
        <div class="project-content">
            <header>
                <nav>
                    <a class="nav-link" href="/projects">{"<"}</a>
                    {hasArticle && <a href="#article">Article</a>}
                    {videos && <a href="#videos">Videos</a>}
                    {gallery && <a href="#gallery">Gallery</a>}
                </nav>
            </header>
            <ScrollView style="scroll-behavior:smooth;" usePad={true}>
                <div class="inner-content">
                    {
                        hasArticle && (
                            <section id="article" class="project-article">
                                <Content />
                            </section>
                        )
                    }
                    {
                        videos && (
                            <section id="videos" class="project-videos">
                                {videos &&
                                    videos.map((video) => (
                                        <iframe
                                            class="youtube-video"
                                            src={`https://www.youtube.com/embed/${video}`}
                                            allowfullscreen
                                        />
                                    ))}
                            </section>
                        )
                    }
                    {
                        gallery && (
                            <section id="gallery" class="project-gallery">
                                {gallery &&
                                    gallery.map((img) => (
                                        <img
                                            loading="lazy"
                                            src={img.src}
                                            width={img.attributes.width}
                                            height={img.attributes.height}
                                        />
                                    ))}
                            </section>
                        )
                    }
                </div>
            </ScrollView>
        </div>
        <aside>
            <ScrollView useMargin={true}>
                <div class="project-details">
                    <div class="details-header">
                        <div
                            class="project-thumbnail"
                            style={`background-image: url(${thumbnail?.src});`}
                        >
                        </div>
                        <span class="project-title">{post.data.title}</span>
                    </div>
                    <div class="details-body">
                        <p>{post.data.description}</p>
                        {
                            post.data.date && (
                                <span class="project-age">
                                    {timeAgo(post.data.date)}
                                </span>
                            )
                        }
                        <div class="tags">
                            {
                                post.data.tags &&
                                    post.data.tags
                                        .sort()
                                        .map((tag) => <code>{tag}</code>)
                            }
                        </div>
                        {post.data.links && <hr />}
                        {
                            post.data.links &&
                                post.data.links.map((link) => (
                                    <DynamicLink href={link} />
                                ))
                        }
                    </div>
                </div>
            </ScrollView>
        </aside>
    </div>
</Layout>

<script>
    document.addEventListener(
        "DOMContentLoaded",
        function () {
            const navs = new Map<string, HTMLAnchorElement>();
            const sections = [
                ...document.querySelectorAll<HTMLElement>("section"),
            ];
            const lookup: HTMLElement[] = [];

            document
                .querySelectorAll<HTMLAnchorElement>(".project-layout nav a")
                .forEach((e) => {
                    const href = e.getAttribute("href");
                    if (!href?.startsWith("#")) return;

                    const id = href.replace("#", "");
                    navs.set(id, e);
                    lookup.push(sections.find((e) => e.id == id)!);
                });

            lookup.reverse();

            let active: HTMLElement | undefined;

            const scroll = document.getElementById(
                "scroll-view",
            ) as HTMLElement;

            function findActive() {
                const margin = lookup.at(-1)!.offsetTop;
                const current = lookup.find(function (section) {
                    return scroll.scrollTop >= section.offsetTop - margin;
                });

                if (current !== active) {
                    navs.forEach((e) => e.classList.remove("active"));
                    active = current;
                    if (current && navs.has(current.id)) {
                        navs.get(current.id)?.classList.add("active");
                        history.replaceState(null, "", `#${current.id}`);
                    }
                }
            }

            scroll.addEventListener("scroll", findActive);
            findActive();
        },
        false,
    );
</script>

