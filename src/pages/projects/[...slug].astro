---
import ScrollView from "../../components/ScrollView.astro";
import DynamicLink from "../../components/DynamicLink.astro";
import { timeAgo } from "../../utility";
import { getImage } from "astro:assets";
import { type CollectionEntry, getCollection, render } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
    const posts = await getCollection("project");
    return posts.map((project) => ({
        params: { slug: project.id },
        props: project,
    }));
}

type Props = CollectionEntry<"project">;

const post = Astro.props;
const { Content } = await render(post);

const thumbnail =
    post.data.thumbnail != null
        ? await getImage({ src: post.data.thumbnail })
        : null;

const gallery = post.data.gallery
    ? await Promise.all(
          post.data.gallery.map(async (src) => {
              return await getImage({ src });
          }),
      )
    : null;

const videos = post.data.videos;

const hasArticle = (post.body || "").length > 0;
---

<Layout
    title={post.data.title}
    description={post.data.description}
    image={post.data.thumbnail}
>
    {
        gallery &&
            gallery.map((image) => (
                <meta
                    slot="head"
                    property="og:image"
                    content={new URL(image.src, Astro.url)}
                />
            ))
    }

    {
        gallery &&
            gallery.map((image) => (
                <meta
                    slot="head"
                    property="twitter:image"
                    content={new URL(image.src, Astro.url)}
                />
            ))
    }

    {
        post.data.tags && (
            <meta
                slot="head"
                property="keywords"
                content={post.data.tags.join(", ")}
            />
        )
    }

    <ScrollView style="scroll-behavior:smooth;" useMargin={true}>
        <div
            style="display:flex;flex-direction:row-reverse;align-items:flex-start;"
        >
            <aside>
                <header>
                    <nav>
                        {hasArticle && <a href="#about">About</a>}
                        {videos && <a href="#videos">Videos</a>}
                        {gallery && <a href="#gallery">Gallery</a>}
                        <div style="display:flex;flex-grow: 1;"></div>
                        <a
                            style="font-family:monospace;"
                            class="nav-link"
                            href="/projects">X</a
                        >
                    </nav>
                </header>
                <div
                    class="thumbnail"
                    style={`background-image: url(${thumbnail?.src});`}
                >
                </div>
                <h2>{post.data.title}</h2>
                <span class="group">{post.data.description}</span>
                <div class="tags">
                    {
                        post.data.tags &&
                            post.data.tags
                                .sort()
                                .map((tag) => <code>{tag}</code>)
                    }
                </div>
                <div class="bottom">
                    {post.data.group}
                    {
                        post.data.date && (
                            <span class="age">| {timeAgo(post.data.date)}</span>
                        )
                    }
                </div>
                {post.data.links && <hr />}
                {
                    post.data.links &&
                        post.data.links.map((link) => (
                            <DynamicLink href={link} />
                        ))
                }
            </aside>
            <article>
                {
                    hasArticle && (
                        <section id="about" style="gap: 0;">
                            <Content />
                        </section>
                    )
                }
                {
                    videos && (
                        <section id="videos">
                            {videos &&
                                videos.map((video) => (
                                    <iframe
                                        loading="lazy"
                                        class="youtube-video"
                                        src={`https://www.youtube.com/embed/${video}`}
                                        allowfullscreen
                                    />
                                ))}
                        </section>
                    )
                }
                {
                    gallery && (
                        <section id="gallery">
                            {gallery &&
                                gallery.map((img) => (
                                    <img
                                        loading="lazy"
                                        src={img.src}
                                        width={img.attributes.width}
                                        height={img.attributes.height}
                                    />
                                ))}
                        </section>
                    )
                }
            </article>
        </div>
    </ScrollView>
</Layout>

<script>
    document.addEventListener(
        "DOMContentLoaded",
        function () {
            const navs = new Map<string, HTMLAnchorElement>();
            const sections = [
                ...document.querySelectorAll<HTMLElement>("section"),
            ];
            const lookup: HTMLElement[] = [];

            document
                .querySelectorAll<HTMLAnchorElement>("aside nav a")
                .forEach((e) => {
                    const href = e.getAttribute("href");
                    if (!href?.startsWith("#")) return;

                    const id = href.replace("#", "");
                    navs.set(id, e);
                    lookup.push(sections.find((e) => e.id == id)!);
                });

            lookup.reverse();

            let active: HTMLElement | undefined;

            const scroll = document.getElementById(
                "scroll-view",
            ) as HTMLElement;

            function findActive() {
                const margin = lookup.at(-1)!.offsetTop;
                const current = lookup.find(function (section) {
                    return scroll.scrollTop >= section.offsetTop - margin;
                });

                if (current !== active) {
                    navs.forEach((e) => e.classList.remove("active"));
                    active = current;
                    if (current && navs.has(current.id)) {
                        navs.get(current.id)?.classList.add("active");
                    }
                }
            }

            scroll.addEventListener("scroll", findActive);
            findActive();
        },
        false,
    );
</script>

<style>
    aside {
        display: flex;
        flex-direction: column;
        top: 1rem;
        position: sticky;
        border: var(--border-width) dotted var(--dimmed-glow-color);
        padding: 1rem;
        margin: 1rem;
        min-width: 350px;
        max-width: 350px;

        margin-left: 0;
        gap: 1rem;
    }

    aside h2 {
        margin-bottom: 0;
    }

    nav {
        display: flex;
        align-items: flex-end;
        justify-content: flex-start;
        border-bottom: var(--border-width) solid var(--text-color);
    }

    nav a {
        padding: 0.5rem 1.2rem;
        color: var(--black);
        text-decoration: none;
    }

    nav a:hover {
        background-color: var(--dimmed-glow-color);
    }

    nav a.active {
        background-color: var(--text-color);
        text-shadow: none;
        color: black;
        font-weight: bold;

        text-decoration: none;
    }

    .thumbnail {
        display: flex;
        aspect-ratio: 1/1;

        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }

    .group {
        display: flex;
        flex-grow: 1;
    }

    .tags {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        flex-shrink: 1;
        gap: 4px;
        font-size: 12px;
    }

    .age {
        opacity: 0.3;
    }

    section {
        padding-top: 1rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    article {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
        border: var(--border-width) dotted var(--dimmed-glow-color);
        padding: 1rem;
        padding-top: 0;
        margin: 1rem;
    }

    img {
        border-radius: 0;
        image-rendering: auto;
    }

    .youtube-video {
        aspect-ratio: 16/9;
        border: 0;
    }

    .grid-view {
        display: grid;
        justify-items: center;
        gap: 1rem;
    }
</style>
