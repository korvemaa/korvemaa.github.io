---
import Project from "../../layouts/Project.astro";
import { type CollectionEntry, getCollection } from "astro:content";

export async function getStaticPaths() {
    const posts = (await getCollection("project")).filter(e=>e.id.startsWith("motorsport"));
    return posts.map((project) => ({
        params: { slug: project.id.substring("motorsport".length) },
        props: project,
    }));
}

type Props = CollectionEntry<"project">;
---

<Project post={Astro.props} backUrl="/motorsport" breadcrumb="Motorsport"></Project>