---
import Effects from "../components/Effects.astro";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Effects />
        <div class="content-container">
            <Header />
            <main>
                <div id="scroll-view">
                    <div id="scroll-container">
                        <slot />
                    </div>
                </div>
            </main>
            <Footer />
        </div>
    </body>
</html>

<style>
    html,
    body {
        height: 100vh;
        margin: 0;
        padding: 0;

        display: flex;
    }

    body {
        flex-direction: column;
        align-items: stretch;
        overflow: auto;
        flex-grow: 1;
        min-width: 0;
        max-width: 1920px;
    }

    .content-container {
        display: flex;
        flex-direction: column;
        flex: 1 1 auto;
        min-height: 0;
        margin: 1em;
        align-items: stretch;
        justify-content: center;
    }

    main {
        box-sizing: border-box;
        display: flex;
        flex: 1 1 auto;
        flex-direction: column;
        align-items: stretch;
        border: 2px solid var(--text-color);
        image-rendering: pixelated;
        min-height: 0;
        max-height: 1080px;
        overflow: hidden;
        padding: 0 1em;
    }

    #scroll-view {
        display: flex;
        flex-direction: column;
        max-height: 100%;
        min-height: 0;
        flex-grow: 1;
        box-sizing: border-box;
        overflow: auto;
        padding: 1em 0;
    }

    #scroll-view::-webkit-scrollbar {
        margin: 1em;
    }

    #scroll-view::-webkit-scrollbar-track {
        margin: 1em;
        background-color: blue;
    }

    #scroll-view::-webkit-scrollbar-track-piece {
        background-color: var(--dimmed-glow-color);
    }

    #scroll-view::-webkit-scrollbar-thumb {
        background-color: var(--text-color);
    }

    #scroll-container {
        display: flex;
        flex-direction: column;
        overflow: visible;
        flex-grow: 1;
        padding-right: 1em;
        align-items: stretch;
    }
</style>
